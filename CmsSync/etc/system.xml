<?xml version="1.0"?>
<config>
    <sections>
        <cmssync translate="label">
            <label>CMS Static Block Sync</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[status
                                <span class="notice">sync status!</span>]]>
                            </comment>
                        </enabled>
                        <source translate="label">
                            <label>Source</label>
                            <frontend_type>select</frontend_type>
                            <source_model>cmssync/system_config_source_master</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>
                                <![CDATA[select master if this will be the source for update, select node for host data.
                                ]]>
                            </comment>
                        </source>

                        <heading_1 translate="label">
                            <label>First Node: </label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <source>1</source>
                            </depends>
                        </heading_1>
                        <url_1 tranlate="label">
                            <label>First Node API url:</label>
                            <frontend_type>text</frontend_type>
                            <comment>Enter the API url for the target. Ex. http://magentoshop.com/index.php/api/soap?wsdl</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>40</sort_order>
                            <validate>validate-url</validate>
                            <depends>
                                <source>1</source>
                            </depends>
                        </url_1>
                        <username_1 translate="label">
                            <label>User Name</label>
                            <frontend_type>text</frontend_type>
                            <comment>soap user name</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>50</sort_order>
                            <depends>
                                <source>1</source>
                            </depends>
                        </username_1>
                        <password_1 translate="label">
                            <label>API key</label>
                            <frontend_type>password</frontend_type>
                            <comment>api key</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>60</sort_order>
                            <depends>
                                <source>1</source>
                            </depends>
                        </password_1>
                        <override_1 translate="label">
                            <label>Override remote data</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>yes - override the source, no - skip </comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>70</sort_order>
                            <comment>Override remote data event if was last updated, use this if the master will be always a source.</comment>
                            <depends>
                                <source>1</source>
                            </depends>
                        </override_1>
                        <onemore_1 translate="label">
                            <label>One more source ?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>80</sort_order>
                            <depends>
                                <source>1</source>
                            </depends>
                        </onemore_1>

                        <heading_2 translate="label">
                            <label>Second Node: </label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <source>1</source>
                                <onemore_1>1</onemore_1>
                            </depends>
                        </heading_2>
                        <url_2 translate="label">
                            <label>Second Node API url:</label>
                            <frontend_type>text</frontend_type>
                            <comment>Enter the API url for the target. Ex: http://magentoshop.com/index.php/api/soap?wsdl</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>100</sort_order>
                            <validate>validate-url</validate>
                            <depends>
                                <source>1</source>
                                <onemore_1>1</onemore_1>
                            </depends>
                        </url_2>
                        <username_2 translate="label">
                            <label>User Name</label>
                            <frontend_type>text</frontend_type>
                            <comment>soap user name</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>110</sort_order>
                            <depends>
                                <source>1</source>
                                <onemore_1>1</onemore_1>
                            </depends>
                        </username_2>
                        <password_2 translate="label">
                            <label>API key</label>
                            <frontend_type>password</frontend_type>
                            <comment>api key</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>120</sort_order>
                            <depends>
                                <source>1</source>
                                <onemore_1>1</onemore_1>
                            </depends>
                        </password_2>
                        <override_2 translate="label">
                            <label>Override data</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>yes - override the source, no - skip already existing</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>130</sort_order>
                            <depends>
                                <source>1</source>
                                <onemore_1>1</onemore_1>
                            </depends>
                        </override_2>
                        <onemore_2 translate="label">
                            <label>One more source ?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>140</sort_order>
                            <depends>
                                <source>1</source>
                                <onemore_1>1</onemore_1>
                            </depends>
                        </onemore_2>

                        <heading_3 translate="label">
                            <label>Third Node: </label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <source>1</source>
                                <onemore_2>1</onemore_2>
                            </depends>
                        </heading_3>
                        <url_3 tranlate="label">
                            <label>Third Node API url:</label>
                            <frontend_type>text</frontend_type>
                            <comment>Enter the API url for the target. Ex. http://magentoshop.com/index.php/api/soap?wsdl</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-url</validate>
                            <sort_order>160</sort_order>
                            <depends>
                                <source>1</source>
                                <onemore_2>1</onemore_2>
                            </depends>
                        </url_3>
                        <username_3 translate="label">
                            <label>User Name</label>
                            <frontend_type>text</frontend_type>
                            <comment>soap user name</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>170</sort_order>
                            <depends>
                                <source>1</source>
                                <onemore_2>1</onemore_2>
                            </depends>
                        </username_3>
                        <password_3 translate="label">
                            <label>API key</label>
                            <frontend_type>password</frontend_type>
                            <comment>api key</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>180</sort_order>
                            <depends>
                                <source>1</source>
                                <onemore_2>1</onemore_2>
                            </depends>
                        </password_3>
                        <override_3 translate="label">
                            <label>Override remote data</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>yes - override the source, no - skip </comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>190</sort_order>
                            <comment>Override remote data event if was last updated, use this if the master will be always a source.</comment>
                            <depends>
                                <source>1</source>
                                <onemore_2>1</onemore_2>
                            </depends>
                        </override_3>
                    </fields>
                </general>
            </groups>
        </cmssync>
    </sections>
</config>